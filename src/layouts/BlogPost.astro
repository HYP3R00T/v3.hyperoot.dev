---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Intro from "@/components/ui/Intro.astro";
import SideNavArticle from "@/components/ui/SideNavArticle.astro";
import Social from "@/components/ui/Social.astro";
import MainContent from "@/components/ui/MainContent.astro";

import type { BlogPostLayoutProps } from "@/lib/types";

const {
  author,
  pubDatetime,
  modDatetime,
  title,
  featured,
  draft,
  category,
  tags,
  description,
  headings,
} = Astro.props as BlogPostLayoutProps;
---

<BaseLayout title={title} description={description}>
  <div class="flex flex-col lg:flex-row flex-1 flex-wrap">
    <div
      class="py-6 lg:py-20 px-4 lg:px-12 lg:w-2/5 lg:h-screen lg:sticky lg:top-0 flex flex-col lg:justify-between items-center lg:items-start"
    >
      <Intro />
      <SideNavArticle {headings} />
      <Social />
    </div>
    <div class="lg:pt-[5.25rem] pb-6 lg:pb-20 px-4 lg:px-12 lg:w-3/5 w-screen">
      <MainContent
        author={author}
        pubDatetime={pubDatetime}
        modDatetime={modDatetime}
        title={title}
        featured={featured}
        draft={draft}
        category={category}
        tags={tags}
        description={description}
        headings={headings}
      >
        <slot />
      </MainContent>
    </div>
  </div>
</BaseLayout>
