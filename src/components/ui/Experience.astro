---
import { Icon } from "astro-icon/components";

import ExpCard from "@/components/base/ExpCard.astro";

import { experience } from "config";
---

<section id="experience" class="scroll-my-8 flex flex-col gap-4">
  {
    experience.map((data) => {
      return <ExpCard {data} />;
    })
  }

  <div class="px-1 py-4 lg:px-6 lg:py-4">
    <a href="" class="flex flex-row gap-2 items-center px-4 pb-8">
      <p>View Full Résumé</p>
      <button class="pb-2">
        <Icon name="arrow-right-up" class="w-[1.2rem] h-[1.2rem]" />
      </button>
    </a>
  </div>
</section>
